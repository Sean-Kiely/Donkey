<p id="notice"><%= notice %></p>

<h1>Listing Owners</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Evac Waiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.email %></td>
        <td class="text-success text-center"><%= fa_icon('check', class: 'fa-2x') if owner.evac_waiver %></td>
        <td><%= link_to fa_icon('eye', text: 'Show'), owner, class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to fa_icon('pencil', text: 'Edit'), edit_owner_path(owner), class: 'btn btn-default btn-xs' %></td>
        <td><%= link_to fa_icon('bomb', text: 'Destroy'), owner, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-info" %>
