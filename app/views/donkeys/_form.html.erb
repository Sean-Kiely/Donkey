<%= form_for(@donkey) do |f| %>
  <% if @donkey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@donkey.errors.count, "error") %> prohibited this donkey from being saved:</h2>

      <ul>
      <% @donkey.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, @owners, :id, :last_comma_first, {prompt: "Select Owner"} %>
  </div>
  <div class="field">
    <%= f.label :dob %><br>
    <%= f.date_select :dob %>
  </div>
  <div class="field">
    <%= f.label :breed_id %><br>
    <%= f.collection_select :breed_id, @breeds, :id, :breed_name, {prompt: "Select Breed"}%>
  </div>
  <div class="field">
    <%= f.label :med_cond, "Special Needs" %><br>
    <%= f.text_field :med_cond %>
  </div>

  <div class="field">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success"%>
  </div>
<% end %>
